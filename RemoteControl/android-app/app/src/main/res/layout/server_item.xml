<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/server_item_background"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_apps"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/server_icon_desc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_server_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="@string/server_name_hint" />

        <TextView
            android:id="@+id/tv_server_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:text="@string/ip_address_hint" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_connection_status"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_circle"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/connection_status_desc" />

</LinearLayout>
